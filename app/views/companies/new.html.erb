<h1>Register a New Company</h1>

<div class="row">
<div class="span6 offset3">

<%= form_for(@company) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true %>

  <%= f.label :teaser %>
  <%= f.text_area :teaser %>

  <%= f.submit "Create Company", class: "btn btn-large btn-primary" %>
<% end %>

</div>
</div>